<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kinkwan.myapplication.add_coupon_nfc">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:id="@+id/linearLayout">


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:orientation="horizontal">
        <TableRow>
            <TextView
                android:text="phone number: "
                android:padding="3dip"
                android:textSize="20dp" />
            <TableRow>
                <TextView
                    android:id="@+id/phone_no_nfc"
                    android:gravity="left"
                    android:padding="3dip"
                    android:textSize="20dp" />
            </TableRow>
        </TableRow>
        <TableRow>
            <TextView
                android:text="company: "
                android:gravity="left"
                android:padding="3dip"
                android:textSize="20dp" />
            <TableRow>
                <TextView
                    android:text=""
                    android:id="@+id/ccom_nfc"
                    android:gravity="left"
                    android:padding="3dip"
                    android:textSize="20dp" />
            </TableRow>
        </TableRow>
        <TableRow>
            <TextView
                android:text="discount: "
                android:gravity="left"
                android:padding="3dip"
                android:textSize="20dp" />
            <TableRow>
                <TextView
                    android:text=""
                    android:id="@+id/cdiscount_nfc"
                    android:gravity="left"
                    android:padding="3dip"
                    android:textSize="20dp" />
            </TableRow>
        </TableRow>
        <TableRow>
            <TextView
                android:text="start date: "
                android:gravity="left"
                android:padding="3dip"
                android:textSize="20dp" />
            <TableRow>
                <TextView
                    android:text=""
                    android:id="@+id/cstart_nfc"
                    android:gravity="left"
                    android:padding="3dip"
                    android:textSize="20dp" />
            </TableRow>
        </TableRow>
        <TableRow>
            <TextView
                android:text="expire date: "
                android:gravity="left"
                android:padding="3dip"
                android:textSize="20dp" />
            <TableRow>
                <TextView
                    android:text=""
                    android:id="@+id/cexpire_nfc"
                    android:gravity="left"
                    android:padding="3dip"
                    android:textSize="20dp" />
            </TableRow>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_explanation"
                android:layout_marginLeft="50dp"
                android:visibility="invisible" />
        </TableRow>
        <TableRow android:orientation="horizontal">
            <Button android:gravity="left"
                android:layout_marginLeft="30dp"
                android:text="cancel"
                android:textAlignment="center"
                android:onClick="cancel_coupon"
                android:textSize="20dp" />

            <Button android:gravity="left"
                android:layout_marginLeft="0dp"
                android:text="Submit"
                android:textAlignment="center"
                android:textSize="20dp"
                android:onClick="submit_coupon_nfc"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
